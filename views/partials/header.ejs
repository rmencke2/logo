<!-- Auth Header -->
<header class="auth-header">
  <div>
    <a href="/" class="brand-link">Influzer.ai</a>
    <nav>
      <a href="/" class="<%= currentPage === 'logo' ? 'active' : '' %>">Logo Generator</a>
      <a href="/video-converter" class="<%= currentPage === 'video-converter' ? 'active' : '' %>">AVI to MP4</a>
      <a href="/video-to-gif" class="<%= currentPage === 'video-to-gif' ? 'active' : '' %>">Video to GIF</a>
      <a href="/video-metadata" class="<%= currentPage === 'video-metadata' ? 'active' : '' %>">Video Metadata</a>
      <a href="/meme-generator" class="<%= currentPage === 'meme-generator' ? 'active' : '' %>">Meme Generator</a>
    </nav>
  </div>
  <!-- Hidden language selector for i18n compatibility -->
  <select id="languageSelector" style="display: none;">
    <option value="en">English</option>
    <option value="da">Dansk</option>
    <option value="sv">Svenska</option>
    <option value="de">Deutsch</option>
    <option value="it">Italiano</option>
    <option value="es">Español</option>
    <option value="fr">Français</option>
    <option value="nl">Nederlands</option>
  </select>
  <div class="auth-buttons" id="authButtons">
    <svg class="language-globe" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" onclick="document.getElementById('footerLanguageSelector')?.scrollIntoView({behavior: 'smooth'})">
      <circle cx="12" cy="12" r="10"/>
      <path d="M2 12h20M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
    </svg>
    <button class="auth-btn primary" onclick="showSignupModal && showSignupModal();">Start Creating</button>
  </div>
  <div class="user-info" id="userInfo" style="display: none;">
    <div class="user-avatar" id="userAvatar">U</div>
    <div class="user-details">
      <div class="user-name" id="userName">User</div>
      <div class="usage-info" id="usageInfo">Loading...</div>
    </div>
    <button class="auth-btn secondary" onclick="logout()">Logout</button>
  </div>
</header>
